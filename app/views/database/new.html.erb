<%= render partial: "menu" %>

<% if params[:no_redirect] %><%= link_to "Back to db", database_path %> |<% end %>
<%= link_to "Back to index", polymorphic_path(@model, no_redirect: params[:no_redirect]) %>

<h1>New <%= @record.model_name %></h1>

<%= form_with(model: @record, local: true) do |form| %>
  <%= render partial: 'form', locals: {form: form} %>
<% end %>
